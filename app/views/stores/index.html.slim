.row
  .col
    h5       
      | Daftar Toko
  .col.text-right
      a href="#{new_store_path}"
        button.btn.btn-success type="button" 
          i.fas.fa-plus 
          |   Tambah Toko
br
.container-fluid
  .col-lg-12.col-md-12
    .card-header.white-text.info-color
        h5.font-weight-500.my-1
          | Pencarian
    .card.mb-4 
      .card-body
        = form_for :store, url: stores_path, method: 'GET' do |form|
          .row
            .col-12
              input type="text" class="form-control md-form" id="search" name="search" placeholder="Nama / Nomor Telepon Toko ..."
            .col-12.text-center
              button class="btn btn-primary"
                | Cari

          .col-md-12.text-center.grey-text
            br
            b
              | #{@search}
.container-fluid
  .col-lg-12.col-md-12
    .card-header.white-text.info-color
        h5.font-weight-500.my-1
          | Data
    .card.mb-4 
      .card-body.table-responsive.text-nowrap
        table class="table"
          thead
            th Name
            th Tipe
            th Alamat
            th Telepon
            th Aksi
          tbody
            = render partial: 'list', collection: @stores, as: :store
        = paginate @stores

